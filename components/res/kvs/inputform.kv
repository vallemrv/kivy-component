#:import get_color kivy.utils.get_color_from_hex
#:import LabelColor components.labels.LabelColor
#:import ButtonIcon components.buttons.ButtonIcon
#:import FloatButton components.floatbuttons
#:import res components.resources
<FormControl>:
    content: _content_control
    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'center'
        canvas:
            Color:
                rgba: root.bg_color
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                id: _content_control
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint: 1, None
                height: dp(1)
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size

<InputTextControl>:
    GridLayout:
        cols: 1
        size_hint: .9, .9
        Label:
            size_hint: 1, None
            text: root.label
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            color: .6,.6,.6,.9
            font_size: dp(15)
            height: dp(25)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            Label:
                text: root.text
                font_size: root.font_size
                text_size: self.size
                size_hint: 1, 1
                halign: 'left'
                valign: 'middle'
                id: _text
                color: root.color

<CheckBoxControl>:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .9, .9
        canvas:
            Color:
                rgba: root.bg_color
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: root.label
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            color: .6,.6,.6,.9
            font_size: dp(15)
            height: dp(25)
        CheckBox:
            size_hint: .2, 1
            active: root.active
            on_active:
                root.active = self.active

<FloatControl>:
    content: _content
    size_hint: 1, 1
    canvas:
        Color:
            rgba: .4,.4,.4,.4
        Rectangle:
            size: self.size
            pos: self.pos
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        size_hint: 1, .85
        id: _content

<FloatColorInput>:
    label: ''
    text: '#b57dbd'
    controller: None
    input: None
    orientation: 'vertical'
    size_hint: .9, .8
    spacing: 3
    LabelColor:
        size_hint: 1, None
        height: dp(35)
        text: root.label
        font_size: '15dp'
        text_size: self.size
        color: "#000000"
        bg_color: '#fcf6e1'
        border_size:'1dp'
    ColorPicker:
        orientation: 'horizontal'
        hex_color: root.text
        on_color:
            root.text = self.hex_color
    ButtonIcon:
        size_hint: 1, .2
        orientation: 'horizontal'
        text: 'Sel color'
        icon: res.FA_CHECK
        color: 0,0,0,1
        bg_color: root.text
        on_release:
            root.input.text = root.text
            root.controller.hide(root.input)

<FloatTextInput>:
    anchor_x: 'center'
    anchor_y: 'center'
    size_hint: .9, None
    height: dp(150)
    GridLayout:
        cols: 1
        spacing: dp(5)
        size_hint: .9, .9
        LabelColor:
            size_hint: 1, None
            height: dp(35)
            text: root.label
            font_size: '15dp'
            text_size: self.size
            color: "#000000"
            bg_color: '#fcf6e1'
            border_size:'1dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: dp(40)
            TextInput:
                id: _input
                size_hint: .7, None
                height: dp(35)
                font_size: dp(20)
                multiline: False
                focus: root.focus
                text: root.text
                write_tab: False
                on_focus:
                    if root.active: root.input.text = self.text
                    if root.active: root.text = self.text
                    if root.active: root.focus = self.focus

            ButtonIcon:
                icon: res.FA_CHECK
                size_hint: None, None
                height: dp(35)
                width: dp(35)
                font_size: '12dp'
                border_size: 0
                bg_color: '#a5e5f9'

<Form>:
    __float_input__: _float_input
    __form_content__: _form_content
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            size: self.size
            pos: self.pos
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            GridLayout:
                cols: 1
                spacing: dp(5)
                size_hint: 1, 1
                id: _form_content


    

    FloatControl:
        id: _float_input
        pos: root.width*2, 0
        controller: root
